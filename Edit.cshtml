
@model Category
<div class="card border-0 shadow mt-3">
<div class="card-header bg-secondary bg-gradient ml-3 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-primary">Edit Category</h2>
        </div>
    </div>

</div>

</div>
<div class="card-body p-4">
    <form method="post p-4">
        <input asp-for="CategoryId" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">

                <hr />
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-floating col-12 py-4">
                <input asp-for="Name" class="form-control border-0 shadow" />
                <label asp-for="Name" class="ms-2"></label>
             
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating col-12 py-4 ">
                <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                <label asp-for="DisplayOrder" class="ms-2"></label>
                
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            </div>
            <div class="row ">
                <div class="col-6 col-md-3">
                    <button class="btn btn-primary form-control" type="submit">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a class="btn btn-danger border form-control" asp-action="Index" asp-controller="Category">Back List</a>
                </div>
            </div>
        </div>



    </form>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
