            <div class="row border">
                <div class="col-6 col-md-4 row">
                    <button class="btn btn-danger form-control" type="submit">Delete</button>

                </div>
                <div class="col-6 col-md-4 row">
                    <a asp-action="Index" asp-controller="Product" class="btn btn-primary form-control">Back List</a>
                </div>
            </div>
        </div>

