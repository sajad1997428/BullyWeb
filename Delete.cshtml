@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-3 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Product</h2>
            </div>

        </div>

    </div>

</div>
<div class="card-body p-4">
    <form method="post">
